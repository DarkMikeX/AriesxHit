# ===================================
# BACKEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ===================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_PATH=./database/ariesxhit.db
DATABASE_TYPE=sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=chrome-extension://*
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://*

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=15m

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@ariesxhit.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=86400000

# Telegram Bot (for extension login + hit notifications)
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername

# Optional: Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: MongoDB Configuration (if using MongoDB instead of SQLite)
# MONGODB_URI=mongodb://localhost:27017/ariesxhit
# MONGODB_TEST_URI=mongodb://localhost:27017/ariesxhit-test
